<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/category-list.css" rel="stylesheet" type="text/css" />
    <script src="https://kit.fontawesome.com/fc1819c339.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include('../layout/header'); -%>
    <div class="content">
        <h1><%= title %></h1>
        <a class="add-button" href="/category/create"><i class="fas fa-plus"></i> Add New Category</a>
        <% if (!categories) { %>
            <p>No categories were loaded</p>
        <% } %>
        <div class="category-grid">
            <% for(const category of categories) { %>
                <a class="category-block" href="<%= category.url %>"><%= category.name %></a>
            <% } %>
        </div>
    </div>
    <%- include('../layout/footer'); -%>
  </body>
</html>