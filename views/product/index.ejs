<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/product-list.css" rel="stylesheet" type="text/css" />
    <script src="https://kit.fontawesome.com/fc1819c339.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include('../layout/header'); -%>
    <div class="content">
        <h1><%= title %></h1>
        <a class="add-button" href="/product/create"><i class="fas fa-plus"></i> Add New Product</a>
        <table>
          <thead>
            <th>Name</th>
            <th>Manufacturer</th>
            <th>Stock</th>
            <th>Price</th>
          </thead>
          <tbody>
            <% if (products.length == 0) { %>
              <tr>
                <td colspan="4" id="no-listing">No Products Were Found</td>
              </tr>
            <% } %>
            <% for(const product of products) { %>
              <tr>
                <td><a href="<%= product.url %>"><%= product.name %></a></td>
                <td><a href="<%= product.manufacturer.url %>"><%= product.manufacturer.name %></a></td>
                <td><%= product.stock %></td>
                <td><%= product.price %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
    </div>
    <%- include('../layout/footer'); -%>
  </body>
</html>