<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/product-create.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <%- include('../layout/header'); -%>
    <div class="content">
        <h1><%= title %></h1>
        <ul>
            <% for (const error of validationErrors) { %>
                <li><%= error %></li>
            <% } %>
        </ul>
        <form method="POST" enctype="multipart/form-data" id="main-form">
            <label for="name">Name</label>
            <br>
            <input type="text" name="name" placeholder="Product Name" />
            <br>

            <label for="manufacturer">Manufacturer</label>
            <br>
            <select name="manufacturer">
              <option value="">Choose a Manufacturer</option>
              <% for (const man of manufacturers) { %>
                <option value="<%= man._id %>"><%= man.name %></option>
              <% } %>
            </select>
            <br>

            <label for="category">Category</label>
            <br>
            <select name="category">
              <option value="">Choose a Category</option>
              <% for (const cat of categories) { %>
                <option value="<%= cat._id %>"><%= cat.name %></option>
              <% } %>
            </select>
            <br>

            <label for="description">Description</label>
            <br>
            <textarea name="description" placeholder="Description for product..."></textarea>
            <br>

            <label for="features">Features</label>
            <br>
            <textarea name="features" placeholder="Separate features with semicolons"></textarea>
            <br>

            <label for="price">Price</label>
            <br>
            <input name="price" type="number" step="0.01">
            <br>

            <label for="stock">Stock</label>
            <br>
            <input name="stock" type="number">
            <br>

            <label for="image">Product Image</label>
            <br>
            <input name="image" type="file">
            <br>

            <input type="submit" value="Submit">
        </form>
    </div>
    <%- include('../layout/footer'); -%>
  </body>
</html>